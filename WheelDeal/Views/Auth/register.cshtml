@{
    ViewData["Title"] = "Register";
}
@model WheelDeal.Models.User

<style>
    .full-height {
        height: 100vh;
    }
</style>

<div class="container-fluid full-height d-flex justify-content-center align-items-center ">
    <div class="card shadow w-100" style="max-width: 800px;">
        <div class="row g-0">
            <!-- Left Panel -->
            <div class="col-md-6 bg-success text-white p-4 rounded-start d-flex flex-column justify-content-center">
                <div>
                    <h2>Join WheelDeal!</h2>
                    <p>Create your account to access amazing deals on new and used cars. Stay informed with the latest reviews and news!</p>
                </div>
            </div>

            <!-- Register Form -->
            <div class="col-md-6 p-4 d-flex flex-column justify-content-center">
                <h3 class="mb-4">Create Account</h3>

                <form method="post" asp-antiforgery="true" onsubmit="return validatePasswords()">
                    @Html.AntiForgeryToken()

                    <div class="row g-2">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" asp-for="First_Name" placeholder="First Name" required>
                                <label asp-for="First_Name">First Name</label>
                                <div class="text-danger">@Html.ValidationMessageFor(model => model.First_Name)</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" asp-for="Last_Name" placeholder="Last Name" required>
                                <label asp-for="Last_Name">Last Name</label>
                                <div class="text-danger">@Html.ValidationMessageFor(model => model.Last_Name)</div>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" asp-for="Email" placeholder="Email" required>
                        <label asp-for="Email">Email</label>
                        <div class="text-danger">@Html.ValidationMessageFor(model => model.Email)</div>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" asp-for="Contact" placeholder="Contact" required>
                        <label asp-for="Contact">Contact Number</label>
                        <div class="text-danger">@Html.ValidationMessageFor(model => model.Contact)</div>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" asp-for="Password" placeholder="Password" required>
                        <label asp-for="Password">Password</label>
                        <div class="text-danger">@Html.ValidationMessageFor(model => model.Password)</div>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" id="ConfirmPassword" name="confirmPassword" placeholder="Re-enter Password" required>
                        <label for="ConfirmPassword">Re-enter Password</label>
                    </div>


                    <div id="passwordError" class="text-danger mb-3 d-none">Passwords do not match.</div>

                    <button type="submit" class="btn btn-success w-100">Register</button>
                </form>

                <p class="mt-3 text-center">
                    Already have an account?
                    <a asp-controller="Auth" asp-action="Login" class="text-success">Login here</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function validatePasswords() {
            const pass = document.getElementById('Password').value;
            const confirm = document.getElementById('ConfirmPassword').value;
            const error = document.getElementById('passwordError');

            if (pass !== confirm) {
                error.classList.remove('d-none');
                return false;
            }

            error.classList.add('d-none');
            return true;
        }
    </script>
}
