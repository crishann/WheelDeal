@{
    ViewData["Title"] = "Register";
}

<style>
    .full-height {
        height: 100vh;
    }
</style>

<div class="container-fluid full-height d-flex justify-content-center align-items-center bg-light">
    <div class="card shadow w-100" style="max-width: 800px;">
        <div class="row g-0">
            <!-- Left Panel -->
            <div class="col-md-6 bg-success text-white p-4 rounded-start d-flex flex-column justify-content-center">
                <div>
                    <h2>Join WheelDeal!</h2>
                    <p>Create your account to access amazing deals on new and used cars. Stay informed with the latest reviews and news!</p>
                </div>
            </div>

            <!-- Register Form -->
            <div class="col-md-6 p-4 d-flex flex-column justify-content-center">
                <h3 class="mb-4">Create Account</h3>

                <form method="post" onsubmit="return validatePasswords()">
                    <div class="row g-2">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="first_name" name="first_name" placeholder="First Name" required>
                                <label for="first_name">First Name</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="last_name" name="last_name" placeholder="Last Name" required>
                                <label for="last_name">Last Name</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                        <label for="email">Email</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="contact" name="contact" placeholder="Contact" required>
                        <label for="contact">Contact Number</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                        <label for="password">Password</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Re-enter Password" required>
                        <label for="confirmPassword">Re-enter Password</label>
                    </div>

                    <div id="passwordError" class="text-danger mb-3 d-none">Passwords do not match.</div>

                    <button type="submit" class="btn btn-success w-100">Register</button>
                </form>

                <p class="mt-3 text-center">
                    Already have an account?
                    <a asp-controller="Auth" asp-action="Login" class="text-success">Login here</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function validatePasswords() {
            const pass = document.getElementById('password').value;
            const confirm = document.getElementById('confirmPassword').value;
            const error = document.getElementById('passwordError');

            if (pass !== confirm) {
                error.classList.remove('d-none');
                return false;
            }

            error.classList.add('d-none');
            return true;
        }
    </script>
}
