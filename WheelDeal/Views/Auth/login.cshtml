@{
    ViewData["Title"] = "Login";
}

<div class="container py-5 d-flex justify-content-center align-items-center">
    <div class="card shadow w-100" style="max-width: 800px;">
        <div class="row g-0">
            <!-- Left Panel -->
            <div class="col-md-6 bg-success text-white p-4 rounded-start">
                <h2>Welcome to WheelDeal!</h2>
                <p>Find your next car with ease. Discover great deals on both new and used vehicles.</p>
                <p>Join our community and make smart car-buying decisions.</p>
            </div>

            <!-- Login Form -->
            <div class="col-md-6 p-4">
                <h3 class="mb-4">Login to Your Account</h3>
                <form method="post" asp-action="Login">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                        <label for="username">Username</label>
                    </div>
                    <div class="form-floating mb-4">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                        <label for="password">Password</label>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Login</button>
                </form>
                <p class="mt-3 text-center">
                    Don't have an account?
                    <a asp-controller="Auth" asp-action="Register" class="text-success">Register here</a>
                </p>
            </div>
        </div>
    </div>
</div>
