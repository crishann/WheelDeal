@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WheelDeal</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" /> *@
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="@Url.Content("~/icons/logo.png")" alt="Logo" class="me-2">
                    <span>WheelDeal</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "NewCar" ? "active text-white" : "")"
                               asp-controller="NewCar" asp-action="newcar">New Car</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "UsedCar" ? "active text-white" : "")"
                               asp-controller="UsedCar" asp-action="usedcar">Used Car</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "NewsReviews" ? "active text-white" : "")"
                               asp-controller="NewsReviews" asp-action="newsreviews">News & Reviews</a>
                        </li>
                    </ul>
                    @{
                        var isLoggedIn = Context.Session.GetString("UserEmail") != null;
                    }

                    <div class="d-flex">
                        @if (isLoggedIn)
                        {
                            <form method="post" asp-controller="Auth" asp-action="Logout" class="d-inline">
                                <button type="submit" class="btn nav-btn">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a asp-controller="Auth" asp-action="Login"
                               class="btn nav-btn me-2 @(currentAction == "Login" ? "active" : "")">
                                Login
                            </a>
                            <a asp-controller="Auth" asp-action="Register"
                               class="btn nav-btn @(currentAction == "Register" ? "active" : "")">
                                Register
                            </a>
                        }
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow-1 d-flex align-items-center justify-content-center">
        <div class="container content-wrapper">
            @RenderBody()
        </div>
    </main>


    <!-- Footer -->
    <footer class="bg-success text-white text-center py-3 mt-auto">
        &copy; @DateTime.Now.Year WheelDeal. All rights reserved.
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
<style>
    .nav-link.active {
        color: white;
        
    }

    .nav-btn {
        background-color: #198754;
        color: white;
    }

        .nav-btn.active {
           
            background-color: #f8f9fa; /* light gray */
            color: #198754; /* Bootstrap success green */
            border: 1px solid #198754;
        }

        .nav-btn:not(.active):hover {
            background-color: #e2e6ea;
        }
</style>
